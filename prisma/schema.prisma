generator client {
  provider = "prisma-client-js"
  output   = "../../node_modules/@prisma-db-1/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Camper {
  id           Int       @id @default(autoincrement())
  createdAt    DateTime  @default(now())
  updatedAt    DateTime? @updatedAt
  firstName    String
  lastName     String
  gender       Gender
  age          Int
  shirtSize    ShirtSize
  notes        String
  whatsapp     String
  payments     Payment[] @relation(name: "PaymentToCamper")
  totalToPaid  Int       @default(1500)
  registeredBy String
}

model Payment {
  id             Int           @id @default(autoincrement())
  paymentMethod  PaymentMethod @default(CASH)
  createdAt      DateTime      @default(now())
  updatedAt      DateTime?     @updatedAt
  receiptNumber  String
  camperId       Int
  camper         Camper        @relation(name: "PaymentToCamper", fields: [camperId], references: [id])
  quantity       Int
  confirmPayment Boolean       @default(false)
  registeredBy   String
}

enum PaymentMethod {
  TRANSFER
  CASH
}

enum Gender {
  MALE
  FEMALE
}

enum ShirtSize {
  XS
  S
  M
  L
  XL
  XXL
  XXXL
  XXXXL
}
